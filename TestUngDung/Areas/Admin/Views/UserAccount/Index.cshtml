@model PagedList.IPagedList<ModelEF.Model.UserAccount>
    @using PagedList.Mvc;
@{
    ViewBag.Title = "Quản lý tài khoản người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<br>
<h2>Người dùng</h2>
<hr />
<div class = "row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách người dùng
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                @using (Html.BeginForm("Index", "UserAccount", FormMethod.Get))
                {
                    <div class="row">
                        <div class="col-lg-5">
                            <div class="col-md-8">
                                <input type="text" value="@ViewBag.SearchString" name="searchString" />
                            </div>
                            <div class="col-md-offset-9">
                                <button type="submit">Tìm kiếm</button>
                            </div>
                            <br>
                        </div>
                    </div>
                }
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Tài khoản</th>
                                <th>Mật khẩu</th>
                                <th>Trạng thái</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="row_@item.ID">
                                    <td>@item.ID</td>
                                    <td>@item.UserName</td>
                                    <td>@item.Password</td>
                                    <td>@item.Status</td>
                                    <td>
                                        <a href="/Admin/UserAccount/Edit/@item.ID">Sửa</a>
                                        <a>|</a>
                                        @Ajax.ActionLink("Xóa", "Delete", new { @id = item.ID }, new AjaxOptions
                                   {
                                       Confirm = "Bạn có muốn xóa người dùng này không?",
                                       OnComplete = "$('#row_" + @item.ID + "').remove()",
                                       HttpMethod = "Delete"
                                   })
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page , @searchString = @ViewBag.SearchString}))
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
    </div>

</div>